<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    android:background="@color/background"
    tools:context="com.example.notifMyTask.detail_task">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/amaranth"
            android:gravity="center"
            android:text="NEW TASK"
            android:textColor="#6B4423"
            android:textSize="40dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/Title"
            android:layout_width="95dp"
            android:layout_height="29dp"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/andika_new_basic"
            android:text="TITLE"
            android:textColor="@color/font"
            android:textStyle="bold"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/theTitle"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_input_text"
            android:fontFamily="@font/amaranth"
            android:textSize="18sp"
            android:hint="input here..." />

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/Course"
                android:layout_width="95dp"
                android:layout_height="29dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/andika_new_basic"
                android:text="COURSE"
                android:textColor="@color/font"
                android:textSize="16sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/theCourse"
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="18sp"
                android:background="@drawable/bg_input_text"
                android:fontFamily="@font/amaranth"
               android:hint="input here..." />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/deadline"
                android:layout_width="95dp"
                android:layout_height="29dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/andika_new_basic"
                android:text="DUE DATE"
                android:textColor="@color/font"
                android:textStyle="bold"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/theDate"
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:textSize="18sp"
                android:background="@drawable/bg_input_text"
                android:fontFamily="@font/amaranth"
                android:hint="input here..." />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/time"
                android:layout_width="95dp"
                android:layout_height="29dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/andika_new_basic"
                android:text="TIME"
                android:textColor="@color/font"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/theTime"
                android:layout_width="400dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:layout_marginRight="20dp"
                android:background="@drawable/bg_input_text"
                android:fontFamily="@font/amaranth"
                android:hint="input here..." />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/desc"
                android:layout_width="120dp"
                android:layout_height="29dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/andika_new_basic"
                android:text="DESCRIPTION"
                android:textColor="@color/font"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/theDesc"
                android:layout_width="400dp"
                android:layout_height="90dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:textSize="18sp"
                android:background="@drawable/bg_input_text"
                android:fontFamily="@font/amaranth"
                android:hint="input here..." />
        </RelativeLayout>

        <Button
            android:id="@+id/addButton"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFA"
            android:fontFamily="@font/andika"
            android:textColor="@color/black"
            android:text="Add Task" />

    </LinearLayout>

</LinearLayout>